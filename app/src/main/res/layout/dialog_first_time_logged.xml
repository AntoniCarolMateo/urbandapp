<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".dialogs.DialogFirstTimeLogged">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:contentDescription="@string/logo_app"
        android:src="@drawable/logo_urband" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:fontFamily="@font/nova_square"
        android:text="@string/veo_que_es_la_primera_vez_que_entras_en_urband"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:fontFamily="@font/nova_square"
        android:text="@string/configura_tu_perfil_para_que_otros_usuarios_puedan_conocerte"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/nova_square"
        android:text="@string/en_primer_lugar_escoge_un_nombre_para_poder_ser_identificado_m_s_facilmente"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor" />

    <EditText
        android:id="@+id/editText_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/nova_square"
        android:inputType="textPersonName"
        android:text="@string/username_dialog"
        android:textAlignment="center"
        android:textColor="@color/primaryDarkColor"
        android:autofillHints=""
        tools:ignore="LabelFor" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="31dp" />
</LinearLayout>