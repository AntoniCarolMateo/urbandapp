<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_match_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView_match_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/imageView_match_"
        app:layout_constraintStart_toStartOf="@+id/imageView_match_"
        app:layout_constraintTop_toTopOf="@+id/imageView_match_" />

    <RatingBar
        android:id="@+id/ratingBar_match_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:isIndicator="true"
        app:layout_constraintEnd_toEndOf="@+id/textView_match_username"
        app:layout_constraintStart_toStartOf="@+id/textView_match_username"
        app:layout_constraintTop_toBottomOf="@+id/textView_match_username" />
</androidx.constraintlayout.widget.ConstraintLayout>